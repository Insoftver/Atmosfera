<%- if controller_name != 'sessions' %>
  <%= link_to "#{(translate ('log_in')).capitalize}", new_session_path(resource_name), :class => "second_to_first" %><br>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "#{(translate ('sign_up')).capitalize}", new_registration_path(resource_name), :class => "second_to_first" %><br>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "#{translate ('forgot_your_password')}", new_password_path(resource_name), :class => "second_to_first" %><br>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "#{translate ('didnt_receive_confirmation_instructions')}", new_confirmation_path(resource_name), :class => "second_to_first" %><br>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "#{translate ('didnt_receive_unlock_instructions')}", new_unlock_path(resource_name), :class => "second_to_first" %><br>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "#{(translate ('sign_in_with')).capitalize} #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), :class => "second_to_first" %><br>
  <% end %>
<% end %>
