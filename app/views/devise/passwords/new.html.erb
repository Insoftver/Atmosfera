<h2 class='second'><%= translate ('forgot_your_password') %></h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <p class='neutral'>
    <%= render "devise/shared/error_messages", resource: resource %><br>
    <%= (translate ('email')).capitalize %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br><br>
    <%= f.submit "#{translate ('send_me_reset_password_instructions')}" %><br><br>
    <%= render "devise/shared/links" %>
  </p>
<% end %>

