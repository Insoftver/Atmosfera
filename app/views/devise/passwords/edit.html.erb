<h2 class='second'><%= translate ('change_your_password') %></h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <p class='neutral'>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <%= (translate ('new_password')).capitalize %><br>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= translate ('characters_minimum') %>)</em>
    <% end %><br> 
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    <%= (translate ('confirm_new_password')).capitalize %><br><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br><br>
    <%= f.submit "#{translate ('change_my_password')}" %><br><br>
    <%= render "devise/shared/links" %>
  </p>
<% end %>